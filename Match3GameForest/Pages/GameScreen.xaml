<Page
    x:Class="Match3GameForest.GameScreen"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel>
        <RelativePanel Padding="5" Height="60">
            <Button x:Name="exitButton" 
                    Content="Exit" 
                    Background="{x:Null}" 
                    FontSize="17"
                    RelativePanel.AlignRightWithPanel="True"
                    RelativePanel.AlignVerticalCenterWithPanel="True" 
                    Click="exitButton_Click"/>

            <RelativePanel RelativePanel.AlignVerticalCenterWithPanel="True" 
                           Margin="5,0,0,0">
                <TextBlock x:Name="textScore" 
                           Text="Score" 
                           FontSize="17"/>
                <TextBlock x:Name="textTimeLeft" 
                           Text="Time left" 
                           FontSize="17"
                           RelativePanel.Below ="textScore"/>
            </RelativePanel>
        </RelativePanel>
        <SwapChainPanel x:Name="swapChainPanel"/>
    </StackPanel>
</Page>
